{% extends 'layout/_page.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}

<div class="col-lg-4">
  <h1 class="m-5">Acceso</h1>

  {% if message %}
    <div class="alert alert-success" role="alert">
      {{ message }}
    </div>
  {% endif %}

  {% for error in errors %}
    <div class="alert alert-danger" role="alert">
      {{ error }}
    </div>
  {% endfor %}

  <form method="post" action="/auth/login">
    <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
    <div class="form-floating mb-3">
      <input
        type="text"
        class="form-control"
        id="floatingInput"
        name="username"
        placeholder="name@example.com"
        value="{{ old.username|default('') }}"
      >
      <label for="floatingInput">Usuario/Email</label>
    </div>
    <div class="form-floating mb-3">
      <input
        type="password"
        class="form-control"
        id="floatingPassword"
        name="password"
        placeholder="Password"
        value="{{ old.password|default('') }}"
      >
      <label for="floatingPassword">Contraseña</label>
    </div>
    <div class="row justify-content-md-center">
      <div class="col d-grid gap-2">
        <button type="submit" class="btn btn-lg btn-primary">Iniciar Sesión</button>
        <div class="d-flex justify-content-center align-items-center">
          <span>No estas registrado aún?</span>
          <a class="btn btn-link" href="/auth/register" role="button">Registrate</a>
        </div>
      </div>
    </div>
  </form>
</div>

{% endblock %}
